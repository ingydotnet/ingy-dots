# Handy for making sense of failing data-oriented tests.
tdiff() {
    prove -lv "$@" \
    | perl -ne 'print if /^not ok/ or s/^# //' \
    | vim - +'set filetype=diff'
}

function giterdone() {
    project=$1
    command giterdone $1
    cd ~/src/$1
}
